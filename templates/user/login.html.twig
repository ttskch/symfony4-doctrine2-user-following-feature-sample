{% extends 'base.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-6 offset-md-3">

            <h3 class="mb-4">Login</h3>

            <form action="{{ path('user_login') }}" method="post" class="mb-5">
                <div class="form-group">
                    <input type="text" name="_username" class="form-control" placeholder="username" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="password">
                </div>
                <div class="form-group d-flex flex-row justify-content-end">
                    <button type="submit" class="btn btn-outline-primary">Login</button>
                </div>
            </form>

            <div class="text-muted">
                <h3 class="mb-4">Demo users</h3>

                <table class="table">
                    <thead>
                    <tr>
                        <th>username</th>
                        <th>password</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>user1</td>
                        <td>pass1</td>
                    </tr>
                    <tr>
                        <td>user2</td>
                        <td>pass2</td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
